<div class='page-header'>
  <h1>Users</h1>
</div>
<div class='row'>
  <div class='col-md-6'>
    <table class='table table-bordered'>
      <thead>
        <tr>
          <th>User ID</th>
          <th>Name</th>
          <th>Email Address</th>
          <th>Playlist Count</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td> <%= user.id %> </td>
          <td> <%= link_to user.name, user_path(user), class: 'btn'%> </td>
          <td> <%= user.email_address %> </td>
          <td> <%= link_to user.playlists.count, playlists_path, class: 'btn' %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
