<div class='page-header'>
  <h1>Playlists</h1>
</div>
<div class='row'>
  <div class='col-md-6'>
    <table class='table table-bordered'>
      <thead>
        <tr>
          <th>Playlist ID</th>
          <th>Title</th>
          <th>Owner</th>
        </tr>
      </thead>
      <tbody>
        <% @playlists.each do |playlist| %>
        <tr>
          <td> <%= playlist.id %> </td>
          <td> <%= link_to playlist.title, playlist_path(playlist), class: 'btn' %> </td>
          <td> <%= playlist.user.name %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
